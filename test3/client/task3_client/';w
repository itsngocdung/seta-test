import { useEffect, useState } from 'react'
import reactLogo from './assets/react.svg'
import viteLogo from '/vite.svg'
import './App.css'
import { useDispatch, useSelector } from 'react-redux'
import { fetchPost } from './store/postSlice'

function App() {
  const [postData, setPostData] = useState()
  const data = useSelector((state) => state.post)
  const dispatch = useDispatch()

  useEffect(() => {
    dispatch(fetchPost())
  }, [])
  return (
    <div className='flex flex-col gap-3'>
      {!data.isLoading ? "loading" : data.data.map((item) => (
        <div className='flex flex-col bg-gray-700 p-4'>
          <div className='gap-2 flex justify-end text-black'>
            <span className='bg-amber-300 px-2'>Edit</span>
            <span className='bg-red-500 px-2'>Remove</span>
          </div>
          <ul className='flex items-start flex-col'>
            <li>userId: {item.userId}</li>
            <li>id: {item.id}</li>
            <li>title: {item.title}</li>
            <li>body: {item.body}</li>
          </ul>
        </div>
      ))}
    </div>
  )
}

export default App
